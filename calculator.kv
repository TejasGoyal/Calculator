<CustomButton@Button>: 
    font_size: 32
    background_color: .94, .90,.54,1
    
<ActButton@Button>:
    font_size: 32
    background_color: 1, 1, .02, 1
	background_down: "#FFFF00"

   
# Define id so I can refer to the CalcGridLayout 
# class functions 
# Display points to the entry widget 
<CalcGridLayout>: 
    id: calculator 
    display: entry 
    rows: 6
    padding: 10
    spacing: 10
  
      
   
    # Where input is displayed 
    BoxLayout: 
        TextInput: 
            id: entry 
            font_size: 32
            multiline: False
			on_text_validate: calculator.calculate(entry.text)
   
    # When buttons are pressed update the entry 
    BoxLayout: 
        spacing: 10
        CustomButton: 
            text: "7"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "8"
            on_press: entry.text += self.text 
		CustomButton:
            text: "9"
            on_press: entry.text += self.text 
        ActButton: 
            text: "+"
            on_press: entry.text += self.text 
           
            
   
    BoxLayout: 
        spacing: 10
        CustomButton: 
            text: "4"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "5"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "6"
            on_press: entry.text += self.text 
        ActButton: 
            text: "-"
            on_press: entry.text += self.text 
            
   
    BoxLayout: 
        spacing: 10
        CustomButton: 
            text: "1"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "2"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "3"
            on_press: entry.text += self.text 
        ActButton: 
            text: "*"
            on_press: entry.text += self.text 
           
   
    # When equals is pressed pass text in the entry 
    # to the calculate function 
    BoxLayout: 
        spacing: 10
        CustomButton: 
            text: "AC"
            on_press: entry.text = "" 
            background_color: 1,0,0,.5
        CustomButton: 
            text: "0"
            on_press: entry.text += self.text
            
        CustomButton: 
            text: "="
            on_press: calculator.calculate(entry.text) 
        	background_color: 0,1,0,1

        	
        ActButton: 
            text: "/"
            on_press: entry.text += self.text 
            

            	
    BoxLayout: 
        CustomButton: 
            font_size: 20
            text: "Tejas Goyal"
			background_color: 1,153/255,204/255,1
          	